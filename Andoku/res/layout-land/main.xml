<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flipper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            style="@style/NavigationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_title_welcome"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                    style="@style/NavigationButton"
                    android:id="@+id/resumeGameButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_nav_resume_game"/>
                <Button
                    style="@style/NavigationButton"
                    android:id="@+id/selectNewGameButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="@string/button_nav_select_new_game"/>
            </TableRow>
            <TableRow android:paddingTop="4dp">
                <Button
                    style="@style/NavigationButton"
                    android:id="@+id/selectFoldersButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_nav_select_folders"/>
                <Button
                    style="@style/NavigationButton"
                    android:id="@+id/settingsButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="@string/button_nav_settings"/>
            </TableRow>
            <TableRow android:paddingTop="4dp">
                <Button
                    style="@style/NavigationButton"
                    android:id="@+id/helpButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_nav_help"/>
                <Button
                    style="@style/NavigationButton"
                    android:id="@+id/aboutButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="@string/button_nav_about"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            style="@style/NavigationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_title_new_game"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/spinner_grid"/>
                    <Spinner android:id="@+id/gridSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/prompt_spinner_grid"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/spinner_extra_regions"/>
                    <Spinner android:id="@+id/extraRegionsSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/prompt_spinner_extra_regions"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/spinner_difficulty"/>
                    <Spinner android:id="@+id/difficultySpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/prompt_spinner_difficulty"/>
                </TableRow>
            </TableLayout>            
            <Button
                style="@style/NavigationButton"
                android:id="@+id/startNewGameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:text="@string/button_nav_start_game"/>
        </LinearLayout>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp">
        <TextView
            style="@style/NavigationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_title_resume_game"
            android:paddingBottom="8dp"/>
        <ListView android:id="@id/android:list"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            android:background="#88fffeff"
            android:cacheColorHint="#0000"
            android:layout_weight="1"/>
<!--
        <Button
            style="@style/NavigationButton"
            android:id="@+id/backButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/button_nav_cancel"/>
-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp">
        <TextView
            style="@style/NavigationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/page_title_help"/>
        <WebView
            android:id="@+id/helpWebView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:fadingEdge="vertical"/>
<!--
        <Button
            style="@style/NavigationButton"
            android:id="@+id/backButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/button_nav_back"/>
 -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp">
        <TextView
            style="@style/NavigationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/page_title_about"/>
        <WebView
            android:id="@+id/aboutWebView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:fadingEdge="vertical"/>
<!--
        <Button
            style="@style/NavigationButton"
            android:id="@+id/backButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/button_nav_back"/>
-->
    </LinearLayout>

</ViewFlipper>
