<resources>
  <declare-styleable name="com.google.ads.AdView">
      <attr name="adSize">
          <enum name="BANNER" value="1"/>
          <enum name="IAB_MRECT" value="2"/>
          <enum name="IAB_BANNER" value="3"/>
          <enum name="IAB_LEADERBOARD" value="4"/>
      </attr>
      <attr name="adUnitId" format="string"/>
  </declare-styleable>
  
    <declare-styleable name="Theme">
        <attr name="buttonStyleKeypad" format="reference"/>
        <attr name="buttonStyleKeypadToggle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="KeypadButton">
        <attr name="highlighted" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="KeypadToggleButton">
        <attr name="checked" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="DrawableStates">
        <attr name="state_checked" format="boolean"/>
        <attr name="state_highlighted" format="boolean"/>
    </declare-styleable>

</resources>
