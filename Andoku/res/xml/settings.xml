<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_category_display">

        <CheckBoxPreference
            android:key="colored_regions"
            android:defaultValue="true"
            android:title="@string/pref_title_colored_regions"
            android:summary="@string/pref_summary_colored_regions"/>

       <CheckBoxPreference
            android:key="colored_extra_regions"
            android:defaultValue="false"
            android:dependency="colored_regions"
            android:layout="?android:attr/preferenceLayoutChild"
            android:title="@string/pref_title_colored_extra_regions"
            android:summary="@string/pref_summary_colored_extra_regions"/>

    </PreferenceCategory>

</PreferenceScreen>